<div class="absCenter">
    <div class="loaderPill">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
</div>
<script id="runPowerBI">

    var accessToken =
            `@try
            {
                @ViewBag.AccessToken;
            }
            catch (Exception)
            {}`;


    setTimeout(function () {

        localStorage.setItem('accesstoken', accessToken.toString());

        var i = 0;
        setInterval(function () {
            if (localStorage.getItem('accesstoken') == null)
            {
                console.log("Waiting for Access Token..." + i);
                i++;
            }

            if (localStorage.getItem('accesstoken') != null)
            {
                window.location.href = "../Finance/Reporting";
                window.location = '../Finance/Reporting';
            }
        },500);
    },2000);




    var isIE10 = false;

    if (navigator.userAgent.indexOf("MSIE 10") > -1) {
        // this is internet explorer 10
        isIE10 = true;
        // window.location = 'https://phrma.azurewebsites.net/Home/Main';
        window.location = '../Finance/Reporting';
    }

    var isIE = (navigator.userAgent.indexOf("MSIE") != -1);

    if (isIE) {
        if (!isIE10) {
            window.location = '../Finance/Reporting';
        }
    }


</script>